# =================================
# Authentication
# =================================
# Required: Secret key for signing tokens (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Legacy single-password mode (required if ENABLE_USER_ACCOUNTS is not set)
DASHBOARD_PASSWORD=

# Enable user accounts mode (set to 'true' to use database-backed user auth)
ENABLE_USER_ACCOUNTS=

# =================================
# Database
# =================================
# SQLite database path (default: .data/dashboard.db)
DATABASE_PATH=

# =================================
# Data Source Configuration
# =================================
# Priority 1: Anthropic Admin API (recommended for production)
ANTHROPIC_ADMIN_API_KEY=
ANTHROPIC_ORG_ID=
ANTHROPIC_ADMIN_API_URL=

# Priority 2: Custom HTTP endpoint
DASHBOARD_DATA_URL=
DASHBOARD_DATA_TOKEN=

# Priority 3: Local JSON file
DASHBOARD_DATA_PATH=

# If none of the above are set, mock data will be used

# =================================
# Legacy (deprecated)
# =================================
# Share store file path - now uses database instead
SHARE_STORE_PATH=
